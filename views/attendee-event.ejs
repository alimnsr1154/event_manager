<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Event Details</title>
    <link rel="stylesheet" href="/main.css">
</head>

<body>
    <div class="container">
        <h1>
            <%= event.title %>
        </h1>
        <div class="event-details">
            <p><strong>Description:</strong>
                <%= event.description %>
            </p>
            <p><strong>Date:</strong>
                <%= new Date(event.event_date).toLocaleString() %>
            </p>

            <div class="ticket-info">
                <h2>Ticket Information</h2>
                <div class="ticket-type">
                    <p>Full Price Ticket: £<%= event.full_price_cost.toFixed(2) %>
                    </p>
                    <p>Available: <%= event.full_price_tickets %>
                    </p>
                </div>
                <div class="ticket-type">
                    <p>Concession Ticket: £<%= event.concession_price.toFixed(2) %>
                    </p>
                    <p>Available: <%= event.concession_tickets %>
                    </p>
                </div>
            </div>

            <form action="/events/book/<%= event.id %>" method="POST">
                <div class="form-group">
                    <label for="attendee_name">Your Name</label>
                    <input type="text" id="attendee_name" name="attendee_name" required>
                </div>

                <div class="ticket-selection">
                    <div class="form-group">
                        <label for="full_price_tickets">Full Price Tickets</label>
                        <input type="number" id="full_price_tickets" name="full_price_tickets" min="0"
                            max="<%= event.full_price_tickets %>" value="0">
                    </div>
                    <div class="form-group">
                        <label for="concession_tickets">Concession Tickets</label>
                        <input type="number" id="concession_tickets" name="concession_tickets" min="0"
                            max="<%= event.concession_tickets %>" value="0">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Book Tickets</button>
                    <a href="/events/attendee" class="btn">Back to Events</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>